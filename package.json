{
  "name": "vscode-st",
  "displayName": "Structured Text language Support",
  "description": "Supports for syntax highlights, snippets for IEC 61131-3 Structured Text",
  "version": "1.5.0",
  "publisher": "Serhioromano",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Serhioromano/vscode-st"
  },
  "keywords": [
    "ST",
    "Structured Text",
    "IEC 61131-3",
    "PLC",
    "logi.CAD 3"
  ],
  "author": "Sergey Romanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Serhioromano/vscode-st/issues",
    "email": "serg4172@mail.ru"
  },
  "homepage": "https://github.com/Serhioromano/vscode-st#readme",
  "engines": {
    "vscode": "^1.20.0"
  },
  "activationEvents": [
    "onLanguage:st",
    "onCommand:extension.st.autoformat"
  ],
  "main": "./out/extension",
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "icon": "st-icon.png",
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "tslint": "^5.8.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Structured Text configuration",
      "properties": {
        "st.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Automatically convert constants like TRUE, FALSE, NULL, or types like INT, BOOL, ...and other keywords to upper case."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "extension.st.autoformat",
          "group": "1_modification"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.st.autoformat",
        "title": "ST: Format"
      }
    ],
    "languages": [
      {
        "id": "st",
        "aliases": [
          "Structured Text",
          "ST"
        ],
        "firstLine": "^([\\(\\/\\*]?.*)?(PROGRAM ).*",
        "extensions": [
          ".st",
          ".stl",
          ".scl",
          ".iecplc",
          ".iecst",
          ".iecstl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "st",
        "scopeName": "source.st",
        "path": "./syntaxes/st.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "st",
        "path": "./snippets/st.snippets.json"
      }
    ]
  }
}
